{
  "name": "electron-veoplayer",
  "private": true,
  "version": "1.0.1",
  "author": "dinglong",
  "main": "dist-electron/main.js",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "start": "electron .",
    "builder": "electron-builder",
    "preview": "vite preview"
  },
  "build": {
    "productName": "veoplayer",
    "directories": {
      "output": "dist"
    },
    "mac": {
      "icon": "./public/static/images/veoplayer_logo.ico"
    },
    "win": {
      "icon": "./public/static/images/veoplayer_logo.ico",
      "target": [
        {
          "target": "nsis"
        }
      ]
    },
    "linux": {
      "icon": "./public/static/images/veoplayer_logo.ico"
    },
    "nsis": {
      "oneClick": false,
      "guid": "idea",
      "perMachine": true,
      "allowElevation": true,
      "allowToChangeInstallationDirectory": true,
      "installerIcon": "./public/static/images/veoplayer_logo.ico",
      "uninstallerIcon": "./public/static/images/veoplayer_logo.ico",
      "installerHeaderIcon": "./public/static/images/veoplayer_logo.ico",
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "idea"
    }
  },
  "files": [
    "./dist",
    "./dist-electron/main.js"
  ],
  "dependencies": {
    "tdesign-vue-next": "^1.3.10",
    "veoplayer": "1.0.1-beta.1",
    "vue": "^3.3.4"
  },
  "devDependencies": {
    "@electron/remote": "^2.0.10",
    "@vitejs/plugin-vue": "^4.2.3",
    "@vitejs/plugin-vue-jsx": "^3.0.0",
    "electron": "^22.3.16",
    "less": "^4.1.3",
    "less-loader": "^11.1.3",
    "typescript": "^5.0.2",
    "vite": "^4.4.0",
    "vite-plugin-electron": "^0.12.0",
    "vue-tsc": "^1.8.3"
  }
}
